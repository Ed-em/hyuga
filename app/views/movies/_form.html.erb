<%= form_for @movie, html: { multipart: true } do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= movie.errors.count %> are the errors.</h2>
      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>

    <%= form.label :genre %>
    <%= select_tag(:genre_id, options_for_select(@genres), class: 'form-control', :prompt => "Select a genre") %>

    <%= form.label :playtime %>
    <%= form.number_field :playtime, class: 'form-control' %>

    <%= form.label :director %>
    <%= form.text_field :director, class: 'form-control' %>

    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>

    <%= form.label :movie_img %>
    <%= form.file_field :movie_img %>
  </div>

   <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

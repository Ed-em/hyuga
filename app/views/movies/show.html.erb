
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.movie_img.url(:movie_show)%>
        <div class="table-responsive">
                <table class="table">
                  <tbody>
                    <tr>
                      <td><strong>Movie length:</strong></td>
                      <td><%= @movie.playtime %></td>
                    </tr>
                    <tr>
                      <td><strong>Director:</strong></td>
                      <td><%= @movie.director %></td>
                    </tr>
                    <tr>
                      <td><strong>Genre:</strong></td>
                      <td><%= @movie.genre.name %></td>
                    </tr>
                  </tbody>
                </table>
                <%= link_to 'Back', movies_path %>

                <% if user_signed_in? %>

                		<% if @movie.user_id == current_user.id %>
                      <%= link_to 'Edit', edit_movie_path(@movie) %> |
                      <%= link_to 'Destroy', @movie, method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
                  <% end %>
              </div>
            </div>
            <div class="col-md-7 col-md-offset-1">
            <h1 class="review_title"><%= @movie.title %></h1>
            <p><%= @movie.description %></p>
            <div class="average-review-rating" data-score = <%= @average_review %>></div>
            <span class="number-of-reviews">Based on <%= @movie.reviews.count %> reviews</span>
            <div>
              <%= link_to "Add Review", new_movie_review_path(@movie), class: "btn-custom" %>
            </div>
            <div class="row">
            <div class="reviews">
               <% if @movie.reviews.blank? %>
                <h3>No reviews just yet, would you like to add the first!</h3>
                <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
              <% else %>
                <h3>Reviews</h3>
          			<%= render @movie.reviews %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <script>
  	$('.review-rating').raty({
  		readOnly: true,
  		score: function() {
  			return $(this).attr('data-score');
  		},
      path: '/assets/',
  	});
  </script>


  <script>
  	$('.average-review-rating').raty({
  		readOnly: true,
      path: '/assets/',
  		score: function() {
  			return $(this).attr('data-score')
  		}
  	});
  </script>
